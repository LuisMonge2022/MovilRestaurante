<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.motorizado.NoEntregaActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="MOTIVO NO ENTREGA"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione motivo" />

    <Spinner
        android:id="@+id/spNoentrega"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="35dp" />
    <TextView
        android:id="@+id/textView13"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si desea, ingrese un comentario">

    </TextView>
    <EditText
        android:id="@+id/edtcomentario"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comentarios"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btnguardarNoentrega"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:text="Enviar informacion" />
</LinearLayout>